rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  	match /questions/{doc} {
      allow read, update, create, delete: if true;
    }
    
    match /{document=**} {
      allow read, update, create, delete: if true;
    }
  }
}
service cloud.firestore {
  match /databases/{database}/documents {
    match /questions/{questionId} {
      allow read, write: if true;
    }
  }
}